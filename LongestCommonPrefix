#coding:gb2312
'''
leetcode Longest Common Prefix
'''

class Solution(object):
    def longestCommonPrefix(self, strs):
        """
        :type strs: List[str]
        :rtype: str
        """

        if len(strs) == 0:
            return ""

        if len(strs) == 1:
            return strs[0]

        min_length = 10000

        #获取列表中最短长度的字符串
        for i in range(len(strs)):
            if len(strs[i]) < min_length:
                min_length = len(strs[i])

        common_prefix = "" #初始化前缀
        prefix_length = 0 #表示前缀的长度

        while True:
            if prefix_length <= min_length:
                temp_common_prefix = strs[0][0: prefix_length + 1]

                for i in range(1, len(strs)):
                    if temp_common_prefix != strs[i][0: prefix_length + 1]:
                        return common_prefix

                common_prefix = temp_common_prefix
                prefix_length += 1
            else:
                break

        return common_prefix