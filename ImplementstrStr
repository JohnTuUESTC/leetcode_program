#coding:gb2312
'''
leetcode Implement strStr()
'''

class Solution(object):
    def strStr(self, haystack, needle):
        """
        :type haystack: str
        :type needle: str
        :rtype: int
        """
        if len(needle) == 0:
            return 0

        if len(haystack) == 0 or len(haystack) < len(needle):
            return -1

        index = 0

        while index < len(haystack):
            if len(haystack) - index < len(needle):
                return -1

            #Ñ°ÕÒÊÇ·ñÓÐÆ¥ÅäµÄ×Ö·û´®
            if haystack[index] == needle[0]:
                temp_index = index + 1
                needle_index = 1
                while needle_index < len(needle) and haystack[temp_index] == needle[needle_index]:
                    temp_index += 1
                    needle_index += 1

                if needle_index == len(needle):
                    return index

            index += 1

        return -1

if __name__ == '__main__':
    sol = Solution()
    print(sol.strStr("123hello123","hello"))